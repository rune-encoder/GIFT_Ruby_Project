  <body>
    <div class="dark" id="root">
    <% if current_admin %>
      <div class="content">
        <%= render "admin/shared/header/main" %>
        <div class="content__inner">
          <%= render "admin/shared/sidebar" %>
          <div class="content__main">
            <%= yield %>
          </div>
        </div>
      </div>
    <% else %> 
      <%= yield %> 
    <% end %>
    </div>
